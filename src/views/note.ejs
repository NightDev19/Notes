<div class="container mx-auto p-4 max-w-3xl">
  <div class="bg-white rounded-lg shadow-md p-8 mt-12">
    <!-- Header with Title -->
    <div class="mb-6">
      <h1 class="text-4xl font-bold text-gray-800 mb-2"><%= note.title %></h1>
      <p class="text-sm text-gray-400"><%= note.timestamp %></p>
    </div>

    <!-- Content -->
    <div class="mb-8 border-t border-gray-200 pt-6">
      <p
        class="text-gray-700 text-lg whitespace-pre-wrap break-words leading-relaxed"
      >
        <%= note.content %>
      </p>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-3 border-t border-gray-200 pt-6">
      <a
        href="/notes/<%= note.id %>/edit"
        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-lg transition duration-200"
      >
        âœï¸ Edit
      </a>
      <form
        action="/notes/<%= note.id %>/delete"
        method="POST"
        onsubmit="return confirm('Are you sure you want to delete this note?')"
        class="inline"
      >
        <button
          type="submit"
          class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-lg transition duration-200"
        >
          ğŸ—‘ï¸ Delete
        </button>
      </form>
      <a
        href="/"
        class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-2 rounded-lg transition duration-200 ml-auto"
      >
        â† Back to Notes
      </a>
    </div>
  </div>
</div>
