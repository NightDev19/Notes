<div class="container mx-auto p-4 max-w-7xl">
  <!-- Header -->
  <div class="text-center py-12 px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-blue-700 mb-4">Notes App</h1>
    <p class="text-lg md:text-xl text-gray-600 mb-8">
      Organize your thoughts, one note at a time
    </p>
    <a href="/notes/add">
      <button
        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg shadow-lg transition duration-200 transform hover:scale-105"
      >
        + Add New Note
      </button>
    </a>
  </div>

  <!-- Features Section -->
  <div
    class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mt-12 max-w-5xl mx-auto px-4"
  >
    <div
      class="bg-white p-4 md:p-6 rounded-lg shadow-md text-center hover:shadow-lg transition duration-200"
    >
      <div class="text-3xl md:text-4xl mb-3">ğŸ“</div>
      <h3 class="font-semibold text-base md:text-lg mb-2">Create</h3>
      <p class="text-gray-600 text-xs md:text-sm">Add new notes instantly</p>
    </div>

    <div
      class="bg-white p-4 md:p-6 rounded-lg shadow-md text-center hover:shadow-lg transition duration-200"
    >
      <div class="text-3xl md:text-4xl mb-3">ğŸ‘ï¸</div>
      <h3 class="font-semibold text-base md:text-lg mb-2">View</h3>
      <p class="text-gray-600 text-xs md:text-sm">Read your notes anytime</p>
    </div>

    <div
      class="bg-white p-4 md:p-6 rounded-lg shadow-md text-center hover:shadow-lg transition duration-200"
    >
      <div class="text-3xl md:text-4xl mb-3">âœï¸</div>
      <h3 class="font-semibold text-base md:text-lg mb-2">Edit</h3>
      <p class="text-gray-600 text-xs md:text-sm">Update notes easily</p>
    </div>

    <div
      class="bg-white p-4 md:p-6 rounded-lg shadow-md text-center hover:shadow-lg transition duration-200"
    >
      <div class="text-3xl md:text-4xl mb-3">ğŸ—‘ï¸</div>
      <h3 class="font-semibold text-base md:text-lg mb-2">Delete</h3>
      <p class="text-gray-600 text-xs md:text-sm">Remove unwanted notes</p>
    </div>
  </div>

  <!-- Recent Notes Section -->
  <div class="mt-16 max-w-4xl mx-auto px-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Your Notes</h2>
    <div class="bg-white rounded-lg shadow-md p-4 md:p-6">
      <% if (notes.length === 0) { %>
      <p class="text-gray-500 text-center py-8">
        No notes yet. Create your first note to get started!
      </p>
      <% } else { %>
      <ul class="space-y-4">
        <% notes.forEach(note => { %>
        <li
          class="border-b border-gray-200 pb-4 last:border-b-0 hover:bg-gray-50 p-3 rounded transition duration-150"
        >
          <h3 class="text-lg md:text-xl font-semibold text-gray-800 mb-2">
            <%= note.title %>
          </h3>
          <p class="text-gray-600 mb-3 text-sm md:text-base">
            <%= note.content.substring(0, 30) %><%= note.content.length > 30 ?
            '...' : '' %>
          </p>
          <div
            class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2"
          >
            <p class="text-xs md:text-sm text-gray-400">
              <%= note.timestamp %>
            </p>
            <a
              href="/notes/<%= note.id %>"
              class="text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base inline-block"
              >View Details â†’</a
            >
          </div>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </div>
  </div>
</div>
