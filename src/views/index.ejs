  <!-- Recent Notes Section -->
  <div class="mt-16 max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Your Notes</h2>
    <div class="bg-white rounded-lg shadow-md p-6">
      <% if (notes.length === 0) { %>
      <p class="text-gray-500 text-center py-8">
        No notes yet. Create your first note to get started!
      </p>
      <% } else { %>
      <ul class="space-y-4">
        <% notes.forEach(note => { %>
        <li class="border-b border-gray-200 pb-4 last:border-b-0">
          <h3 class="text-xl font-semibold text-gray-800 mb-2">
            <%= note.title %>
          </h3>
          <p class="text-gray-600 mb-2 line-clamp-2"><%= note.content %></p>
          <div class="flex justify-between items-center">
            <p class="text-sm text-gray-400"><%= note.timestamp %></p>
            <a
              href="/notes/<%= note.id %>"
              class="text-blue-600 hover:text-blue-700 font-medium"
